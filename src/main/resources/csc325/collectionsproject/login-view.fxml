<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="338.0" prefWidth="310.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="csc325.collectionsproject.CollectionsController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
  <BorderPane prefHeight="200.0" prefWidth="200.0">
    <bottom>
      <HBox fx:id="LoginButtonBox" alignment="CENTER" prefHeight="53.0" prefWidth="270.0" BorderPane.alignment="CENTER">
        <children>
          <Button onAction="#onLoginButtonClick" text="Login" />
        </children>
      </HBox>
    </bottom>
    <top>
      <HBox fx:id="UserBox" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
        <children>

          <Label fx:id="usernameLabel" alignment="CENTER_RIGHT" text="Username">
            <padding>
              <Insets right="30.0" />
            </padding>
          </Label>
          <TextField fx:id="usernameTextField" prefHeight="26.0" prefWidth="177.0" />
        </children>
      </HBox>
    </top>
    <center>
      <HBox fx:id="PwBox" alignment="CENTER_LEFT" prefHeight="27.0" prefWidth="270.0" BorderPane.alignment="CENTER">
        <children>
          <Label fx:id="passwordLabel" alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="28.0" prefWidth="86.0" text="Password" textAlignment="CENTER">
            <padding>
              <Insets right="30.0" top="10.0" />
            </padding>
          </Label>
          <TextField fx:id="pwTextField" prefHeight="26.0" prefWidth="173.0" />
        </children>
      </HBox>
    </center>
  </BorderPane>
</VBox>
