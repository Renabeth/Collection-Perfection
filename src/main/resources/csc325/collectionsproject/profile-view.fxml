<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="csc325.collectionsproject.controller.ProfileController">
   <top>
      <ToolBar prefHeight="57.0" BorderPane.alignment="CENTER">
        <items>
            <Button fx:id="newCollectionBtn" layoutX="236.0" layoutY="10.0" mnemonicParsing="false" onAction="#createNewCollection" prefHeight="26.0" prefWidth="111.0" text="New Collection" />
            <ButtonBar prefHeight="40.0" prefWidth="200.0" />
            <ImageView fx:id="profilePicture" fitHeight="47.0" fitWidth="66.0" pickOnBounds="true" preserveRatio="true" translateX="450.0" />
        </items>
      </ToolBar>
   </top>
   <center>
      <ScrollPane minViewportHeight="800.0" minViewportWidth="500.0" prefViewportHeight="800.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <content>
            <VBox alignment="CENTER">
               <children>
                  <VBox alignment="CENTER" minHeight="550.0" spacing="30.0">
                     <children>
                        <Label fx:id="profileNameLabel" alignment="CENTER" contentDisplay="CENTER" style="-fx-background-radius: 10; -fx-background-color: DARKGREEN;" text="Profile Name" textFill="WHITE">
                           <font>
                              <Font size="64.0" />
                           </font>
                           <padding>
                              <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
                           </padding>
                        </Label>
                        <HBox alignment="CENTER" spacing="30.0">
                           <children>
                              <Pane prefHeight="302.0" prefWidth="272.0">
                                 <children>
                                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#86ab84b0" height="302.0" stroke="BLACK" strokeType="INSIDE" width="272.0" />
                                    <VBox alignment="CENTER" layoutX="-9.0" prefHeight="301.0" prefWidth="281.0" spacing="15.0">
                                       <children>
                                          <ImageView fx:id="primaryCollectionImage" fitHeight="215.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
                                             <image>
                                                <Image url="@imgs/pipermelonart.png" />
                                             </image>
                                             <VBox.margin>
                                                <Insets />
                                             </VBox.margin>
                                          </ImageView>
                                          <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="279.0" text="Your Fav Collection" textFill="WHITE">
                                             <font>
                                                <Font size="18.0" />
                                             </font>
                                          </Label>
                                       </children>
                                       <padding>
                                          <Insets bottom="10.0" left="15.0" right="5.0" top="15.0" />
                                       </padding>
                                    </VBox>
                                 </children>
                              </Pane>
                              <Pane prefHeight="302.0" prefWidth="596.0">
                                 <children>
                                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#86ab84" height="302.0" stroke="BLACK" strokeType="INSIDE" width="596.0" />
                                    <Button fx:id="viewPrimaryCollectionBtn" layoutX="240.0" layoutY="263.0" mnemonicParsing="false" onAction="#openPrimaryCollection" text="View Full Collecton" />
                                    <HBox alignment="CENTER" layoutX="28.0" layoutY="19.0" spacing="20.0">
                                       <children>
                                          <ImageView fx:id="showcaseItem1" fitHeight="225.0" fitWidth="162.0" pickOnBounds="true" preserveRatio="true">
                                             <image>
                                                <Image url="@imgs/pipermelonart.png" />
                                             </image>
                                          </ImageView>
                                          <ImageView fx:id="showcaseItem2" fitHeight="225.0" fitWidth="162.0" pickOnBounds="true" preserveRatio="true">
                                             <image>
                                                <Image url="@imgs/trilo.jpg" />
                                             </image>
                                          </ImageView>
                                          <ImageView fx:id="showcaseItem3" fitHeight="199.0" fitWidth="162.0" pickOnBounds="true" preserveRatio="true">
                                             <image>
                                                <Image url="@imgs/qt.png" />
                                             </image>
                                          </ImageView>
                                       </children>
                                       <padding>
                                          <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                                       </padding>
                                    </HBox>
                                 </children>
                              </Pane>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="30.0" right="30.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" prefWidth="1023.0" spacing="10.0">
                     <children>
                        <Label contentDisplay="CENTER" style="-fx-background-color: DARKGREEN; -fx-background-radius: 10;" text="Your Collections" textFill="WHITE">
                           <font>
                              <Font name="Century Gothic" size="36.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <padding>
                              <Insets bottom="5.0" left="40.0" right="40.0" top="5.0" />
                           </padding>
                        </Label>
                        <GridPane fx:id="itemGrid" alignment="CENTER">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints maxHeight="200.0" minHeight="10.0" prefHeight="200.0" vgrow="SOMETIMES" />
                              <RowConstraints maxHeight="200.0" minHeight="10.0" prefHeight="200.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="200.0" />
                           </rowConstraints>
                           <children>
                              <Button fx:id="addItemInGridBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#addCollectionToGrid" text="Add to Grid" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                                 <GridPane.margin>
                                    <Insets />
                                 </GridPane.margin>
                              </Button>
                           </children>
                        </GridPane>
                     </children>
                     <padding>
                        <Insets bottom="30.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </content>
         <padding>
            <Insets left="250.0" />
         </padding>
      </ScrollPane>
   </center>
</BorderPane>
