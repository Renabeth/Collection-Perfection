<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="csc325.collectionsproject.controller.ProfileController">
   <center>
      <VBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="profileNameLabel" alignment="CENTER" contentDisplay="CENTER" text="Profile Name">
               <font>
                  <Font size="64.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <Pane prefHeight="302.0" prefWidth="272.0">
                     <children>
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="302.0" stroke="BLACK" strokeType="INSIDE" width="272.0" />
                        <Label layoutX="85.0" layoutY="257.0" prefHeight="17.0" prefWidth="103.0" text="Primary Collection" />
                        <ImageView fx:id="primaryCollectionImage" fitHeight="215.0" fitWidth="250.0" layoutX="12.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </Pane>
                  <Pane prefHeight="302.0" prefWidth="596.0">
                     <children>
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="302.0" stroke="BLACK" strokeType="INSIDE" width="596.0" />
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#bc1010" height="225.0" layoutX="28.0" layoutY="19.0" stroke="BLACK" strokeType="INSIDE" width="162.0" />
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#bc1010" height="225.0" layoutX="407.0" layoutY="19.0" stroke="BLACK" strokeType="INSIDE" width="162.0" />
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#bc1010" height="225.0" layoutX="217.0" layoutY="19.0" stroke="BLACK" strokeType="INSIDE" width="162.0" />
                        <Button fx:id="viewPrimaryCollectionBtn" layoutX="240.0" layoutY="263.0" mnemonicParsing="false" onAction="#openPrimaryCollection" text="View Full Collecton" />
                        <ImageView fx:id="showcaseItem3" fitHeight="225.0" fitWidth="162.0" layoutX="407.0" layoutY="19.0" pickOnBounds="true" preserveRatio="true" />
                        <ImageView fx:id="showcaseItem1" fitHeight="225.0" fitWidth="162.0" layoutX="28.0" layoutY="19.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@imgs/yello.jpg" />
                           </image>
                        </ImageView>
                        <ImageView fx:id="showcaseItem2" fitHeight="225.0" fitWidth="162.0" layoutX="217.0" layoutY="19.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </Pane>
               </children>
            </HBox>
            <Button fx:id="viewAllButton" mnemonicParsing="false" onAction="#openAllCollections" prefHeight="25.0" prefWidth="162.0" text="View All" />
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <ToolBar prefHeight="57.0">
        <items>
            <Button fx:id="newCollectionBtn" layoutX="236.0" layoutY="10.0" mnemonicParsing="false" onAction="#createNewCollection" prefHeight="26.0" prefWidth="111.0" text="New Collection" />
          <Button fx:id="collectionViewBtn" mnemonicParsing="false" onAction="#openAllCollections" text="Collection View" />
            <ButtonBar prefHeight="40.0" prefWidth="200.0" />
            <ImageView fx:id="profilePicture" fitHeight="47.0" fitWidth="66.0" pickOnBounds="true" preserveRatio="true" translateX="450.0" />
        </items>
      </ToolBar>
   </top>
   <bottom>
      <ScrollPane fitToWidth="true" prefHeight="400.0" prefWidth="1023.0" BorderPane.alignment="CENTER">
         <content>
            <VBox alignment="CENTER" prefWidth="1023.0" spacing="10.0">
               <children>
                  <Label contentDisplay="CENTER" style="-fx-background-color: DARKGREEN; -fx-background-radius: 10;" text="Your Collections" textFill="WHITE">
                     <font>
                        <Font name="Century Gothic" size="36.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="5.0" left="40.0" right="40.0" top="5.0" />
                     </padding>
                  </Label>
                  <GridPane fx:id="itemGrid" alignment="CENTER">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints maxHeight="200.0" minHeight="10.0" prefHeight="200.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="200.0" minHeight="10.0" prefHeight="200.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="200.0" />
                     </rowConstraints>
                     <children>
                        <Button fx:id="addItemInGridBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Add New Item" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                           <GridPane.margin>
                              <Insets />
                           </GridPane.margin>
                        </Button>
                     </children>
                  </GridPane>
               </children>
               <padding>
                  <Insets bottom="30.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </bottom>
</BorderPane>
